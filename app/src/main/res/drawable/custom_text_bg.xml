<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_textview_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" /> <!-- Background color -->

    <stroke
        android:width="1dp"
        android:color="@color/border_color" /> <!-- Border color and thickness -->

    <padding
        android:left="20dp"
        android:top="14dp"
        android:right="12dp"
        android:bottom="14dp" /> <!-- Optional padding inside the border -->

    <corners android:radius="8dp" /> <!-- Optional rounded corners -->
</shape>
