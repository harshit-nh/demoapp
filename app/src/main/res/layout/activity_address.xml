<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/address_activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:src="@drawable/ic_arrow_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Select Delivery Location"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Receiver's Name"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/receiverNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enter name"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Receiver's Phone number"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/receiverNumberTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_color"
                android:hint="Enter phone number"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_bg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Label"
                android:textSize="20sp"
                android:textColor="@color/black"/>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/labelTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_color"
                android:hint="Label"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_bg"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Address"
                android:textSize="20sp"
                android:textColor="@color/black"/>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addressTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="60dp"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_color"
                android:hint="Street"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_bg"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="City"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cityTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/hint_color"
                        android:hint="Enter City"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:background="@drawable/edit_text_bg"/>


                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="State"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/stateTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/hint_color"
                        android:hint="Enter State"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:background="@drawable/edit_text_bg"/>


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Zipcode"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/zipcodeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_color"
                android:hint="Street"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_bg"/>

            <TextView
                android:id="@+id/saveDetailsTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:textAlignment="center"
                android:background="@drawable/save_button_bg"
                android:text="Save Details"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/light_blue"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>